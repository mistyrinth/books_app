<%= form_with(local: true, url: [@commentable, @comment], method: 'post' ) do |form| %>
  <div class="comment">
    <%= form.label :comment %>
    <%= form.text_area :comment, size: "40x3"  %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
